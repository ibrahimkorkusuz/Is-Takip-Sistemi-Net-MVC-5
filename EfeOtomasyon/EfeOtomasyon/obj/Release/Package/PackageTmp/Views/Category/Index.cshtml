
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Category>

@if (Session["employee"] != null)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                @Html.ActionLink("BÖLÜM EKLE", "Insert", "Category", new { @class = "btn btn-danger col-lg-5" })
                <br />
                <br />
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-table"></i>
                        BÖLÜMLER
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Bölüm Adı</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>Bölüm Adı</th>
                                        <th>İşlem</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (Category item in Model)
                                    {

                                        <tr>
                                            <td>@item.CategoryID</td>
                                            <td>@item.CategoryName</td>

                                            <td>
                                                @Html.ActionLink("Sil", "Delete", "Category", new { id = item.CategoryID }, null)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>


            </div>
        </div>
    </div>
}
