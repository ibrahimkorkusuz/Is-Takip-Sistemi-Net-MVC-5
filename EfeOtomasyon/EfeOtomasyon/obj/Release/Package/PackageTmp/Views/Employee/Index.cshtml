
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Employee>

@if (Session["employee"] != null)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                @Html.ActionLink("KULLANICI EKLE", "Insert", "Employee", new { @class = "btn btn-success col-lg-5" })
                <br />
                <br />
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-table"></i>
                        KULLANICILAR
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>İsim</th>
                                        <th>Soyisim</th>
                                        <th>Email</th>
                                        <th>Pozisyon</th>
                                        <th>Telefon</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>İsim</th>
                                        <th>Soyisim</th>
                                        <th>Email</th>
                                        <th>Pozisyon</th>
                                        <th>Telefon</th>
                                        <th>İşlem</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (Employee item in Model)
                                    {

                                        <tr>
                                            <td>@item.EmployeeID</td>
                                            <td>@item.FirstName</td>
                                            <td>@item.LastName</td>
                                            <td>@item.Email</td>
                                            <td>
                                                @item.Title
                                            </td>
                                            <td>@item.Phone</td>
                                          
                                               <td> 
                                                @Html.ActionLink("Güncelle", "Update", "Employee", new { id = item.EmployeeID }, null) |
                                                @Html.ActionLink("Sil", "Delete", "Employee", new { id = item.EmployeeID }, null)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                   
                </div>


            </div>
        </div>
    </div>
}
