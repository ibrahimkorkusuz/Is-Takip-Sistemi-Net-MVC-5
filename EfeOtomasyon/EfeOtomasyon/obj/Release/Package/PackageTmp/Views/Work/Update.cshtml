@model WorkOrder
@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Session["employee"] != null)
{
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-3">
            <h2>Update</h2><br/>
            @using (Html.BeginForm("Update", "Work", FormMethod.Post))
            {
                @Html.HiddenFor(model => model.EmployeeID)
                @Html.HiddenFor(model => model.CategoryID)
                @Html.HiddenFor(model => model.WorkID)
                @Html.HiddenFor(model => model.ImagePath)

                <div class="form-group">
                    <label>Sipariş No</label>
                    @Html.TextBoxFor(model => model.PlugNo, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>İş Başlangıç Tarihi</label>
                    @Html.TextBoxFor(model => model.CreateDate, new { placeholder = "03/07/2019", @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>İşin Adı</label>
                    @Html.TextBoxFor(model => model.WorkName, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>İşin Sahibi</label>
                    @Html.DropDownListFor(model => model.EmployeeID, (SelectList)ViewBag.Employee, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>İş Teslim Tarihi</label>
                    @Html.TextBoxFor(model => model.DueDate, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Bölüm Adı</label>
                    @Html.DropDownListFor(model => model.CategoryID, (SelectList)ViewBag.Category, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Malzeme</label>
                    @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Miktar</label>
                    @Html.TextBoxFor(model => model.Quantity, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Açıklama / Not</label>
                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Link</label>
                    @Html.TextBoxFor(model => model.Link, new { @class = "form-control" })
                </div>

                <!--
                    <div class="form-group">
                    <label>Resim</label>
                    @Html.TextBoxFor(model => model.ImagePath, new { @class = "form-control" })
                </div>
                    
                    <div class="form-group">
                    <label>Resim Seçiniz</label>
                    <input type="file" name="fluResim" />
                    <img src="@Url.Content(Model.ImagePath)" height="150" width="150" />

                </div>-->


                    <button type="submit" class="btn btn-success">Update</button>
            }

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Hata!</strong> @ViewBag.Message
                        </div>
                    }
                </div>
    </div>
</div>}