@model WorkOrder

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["employee"] != null)
{
    <div class="container">
        <div class="row">
            <div class="col-lg-4">

                <div>
                    <h4>İşin Detayı</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            FİŞ NO
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.PlugNo)
                        </dd>

                        

                        <dt>
                            İŞ BAŞLANGIÇ TARİHİ
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.CreateDate)
                        </dd>

                        <dt>
                            İŞİN ADI
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.WorkName)
                        </dd>

                        <dt>
                            İlgili Kişi
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Employee.FirstName) @Html.DisplayFor(model => model.Employee.LastName)
                        </dd>

                        <dt>
                            TESLİM TARİHİ
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DueDate)
                        </dd>

                        <dt>
                            BÖLÜM
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Category.CategoryName)
                        </dd>

                        <dt>
                            MALZEME
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ProductName)
                        </dd>

                        <dt>
                            MİKTAR
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Quantity)
                        </dd>

                        <dt>
                            AÇIKLAMA
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>

                        <dt>
                            LİNK
                        </dt>

                        <dd>
                            <a href="@Model.Link">@Html.DisplayFor(model => model.Link)</a>
                        </dd>

                    </dl>
                </div>
            </div>
            <div class="col-lg-8">
                <h4>RESİM</h4>
                <hr />
                <div>
                    <img src="@Url.Content(Model.ImagePath)" height="70%" width="70%" />
                </div>
            </div>
        </div>
    </div>

}
