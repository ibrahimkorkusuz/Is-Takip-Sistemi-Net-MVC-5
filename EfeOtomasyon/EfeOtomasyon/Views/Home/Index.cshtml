
@model Employee

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container-fluid">
        <!-- Breadcrumbs-->
        

        <!-- Icon Cards-->
        <div class="row justify-content-md-center">
            <div class="col-lg-4 col-lg-offset-4">
                <center><h2>Giriş Yap</h2></center>
                <br />
                <br />
                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {

                    <div style="margin-bottom:5px;" class="input-group">
                        <div class="input-group-addon">
                            <i class="glyphicon glyphicon-user"></i>
                        </div>
                        @Html.TextBoxFor(x => x.Email, new { @placeholder = "E-Posta Adresiniz", @class = "form-control" })

                    </div>
                    <span class="text-danger">
                        @Html.ValidationMessageFor(x => x.Email)
                    </span>


                    <div style="margin-bottom:10px;" class="input-group">
                        <div class="input-group-addon">
                            <i class="glyphicon glyphicon-lock"></i>
                        </div>
                        @Html.PasswordFor(x => x.Password, new { @placeholder = "Parolanız", @class = "form-control" })

                    </div>
                    <span class="text-danger">
                        @ViewBag.Message
                    </span>
                            <input type="submit" value="Giriş Yap" class="btn btn-success btn-block" />

                }




            </div>
            </div>
        </div>


