
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<WorkOrder>
@if (Session["employee"] != null)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <br />
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-table"></i>
                        İş Akışı
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Fiş No</th>
                                        <th>Başlangıç Tarihi</th>
                                        <th>İşin Adı</th>
                                        <th>İlgili</th>
                                        <th>Teslim Tarihi</th>
                                        <th>Bölüm</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>Fiş No</th>
                                        <th >Başlangıç Tarihi</th>
                                        <th>İşin Adı</th>
                                        <th>İlgili</th>
                                        <th >Teslim Tarihi</th>
                                        <th>Bölüm</th>
                                        <th >İşlem</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (WorkOrder item in Model)
                                    {

                                        <tr>
                                            <td>@item.WorkID</td>
                                            <td>@item.PlugNo</td>
                                            <td>@Convert.ToDateTime(item.CreateDate).ToString("dd/MM/yyyy")</td>
                                            <td>@item.WorkName</td>
                                            <td>
                                                @item.Employee.FirstName
                                            </td>
                                            <td>@Convert.ToDateTime(item.DueDate).ToString("dd/MM/yyyy")</td>
                                            <td>@item.Category.CategoryName</td>
                                            <td>
                                                <!-- @Html.ActionLink("Yapıldı", "Done", "Work", new { id = item.WorkID }, null) |-->
                                                @Html.ActionLink("Güncelle", "Update", "Work", new { id = item.WorkID }, null) |
                                                @Html.ActionLink("Detay", "Detail", "Work", new { id = item.WorkID }, null) |
                                                @Html.ActionLink("Sil", "Delete", "Work", new { id = item.WorkID }, null)
                                            </td>
                                       </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer small text-muted">Yeni gelen işleri anlık görebilmek için sayfada CTRL + F5 tuşlarına basınız.</div>
                </div>


            </div>
        </div>
    </div>
}