
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<WorkDone>
@if (Session["employee"] != null)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <br />
                <div class="card mb-3">
                    <div class="card-header">
                        <i class="fas fa-table"></i>
                        Yapılan İşler
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Fiş No</th>
                                        <th>Başlangıç Tarihi</th>
                                        <th>İşin Adı</th>
                                        <th>Yetkili</th>
                                        <th>Teslim Tarihi</th>
                                        <th>Bölüm</th>
                                        <th>Miktar</th>
                                        <th>Ürün</th>
                                        <th>Açıklama / Not</th>
                                        <th>Resim</th>
                                        <th>İşlem</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>İş No</th>
                                        <th>Fiş No</th>
                                        <th>Başlangıç Tarihi</th>
                                        <th>İşin Adı</th>
                                        <th>Yetkili</th>
                                        <th>Teslim Tarihi</th>
                                        <th>Bölüm</th>
                                        <th>Miktar</th>
                                        <th>Malzeme</th>
                                        <th>Açıklama / Not</th>
                                        <th>Resim</th>
                                        <th>İşlem</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (WorkDone item in Model)
                                    {

                                        <tr>
                                            <td>@item.WorkDoneID</td>
                                            <td>@item.PlugNo</td>
                                            <td>@item.CreateDate</td>
                                            <td>@item.WorkName</td>
                                            <td>
                                                @item.Employee.FirstName
                                            </td>
                                            <td>@item.DueDate</td>
                                            <td>@item.Category.CategoryName</td>
                                            <td>@item.Quantity</td>
                                            <td>@item.ProductName</td>
                                            <td>@item.Description</td>
                                            <td><img src="@Url.Content(item.ImagePath)" height="100" width="100" /></td>
                                            <td>
                                                <!-- @Html.ActionLink("Güncelle", "Update", "Work", new { id = item.WorkDoneID }, null) |
                                                @Html.ActionLink("Yapıldı", "Done", "Work", new { id = item.WorkDoneID }, null) |
                                                @Html.ActionLink("Sil", "Delete", "Work", new { id = item.WorkDoneID }, null)-->
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card-footer small text-muted">Yeni gelen işleri anlık görebilmek için sayfada CTRL + F5 tuşlarına basınız.</div>
                </div>


            </div>
        </div>
    </div>
}